<!-- 按钮组件的基本使用 -->
<button type="primary" size="default">主要按钮</button>
<!-- size设定为mini后，按钮就变为行内块元素 -->
<button type="warn" size="mini">按钮</button>
<button type="warn" size="mini" plain>按钮</button>
<button type="warn" size="mini" plain disabled>按钮</button>
<button type="warn" size="mini" plain loading>按钮</button>

<!-- 输入框组件的基本使用 -->
<input value="请输入用户名"></input>
<input placeholder="请输入密码" password type="number"></input>
<input type="digit" placeholder="带小数点的输入框"></input>
<input type="idcard" placeholder="请输入身份证号" cursor-spacing="100"></input>
